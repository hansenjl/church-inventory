<h1>SIGNUP</h1>

<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_for @user do |f| %>
  Email: <%= f.email_field :email %> <br><br>
  Name: <%= f.text_field :first_name %> <br><br>
  Password: <%= f.password_field :password %> <br><br>
  <%= f.submit "Sign Up" %>
<% end %>
